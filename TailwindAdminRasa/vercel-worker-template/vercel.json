{
  "version": 2,
  "name": "autoposting-worker",
  "functions": {
    "api/worker.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 60
    }
  },
  "regions": ["sin1", "hnd1", "sfo1", "iad1", "fra1"],
  "env": {
    "BRAIN_BASE_URL": "@brain-base-url",
    "WORKER_ID": "@worker-id",
    "WORKER_REGION": "@worker-region",
    "WORKER_PLATFORMS": "@worker-platforms",
    "WORKER_REGISTRATION_SECRET": "@worker-registration-secret"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}